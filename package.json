{
  "name": "sinckapp",
  "version": "1.0.0",
  "description": "P2P file synchronization application",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"electron dist/main/main.js\"",
    "build": "npm run build:main && npm run build:renderer && npm run copy:assets",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:renderer": "webpack --config webpack.config.js",
    "copy:assets": "cp src/renderer/index.html dist/renderer/ && cp src/renderer/styles.css dist/renderer/",
    "build:watch": "npm run build:main -- --watch",
    "start": "electron dist/main/main.js",
    "package": "electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder --mac --win --linux",
    "dist": "npm run build && electron-builder --publish=never",
    "dist:mac": "npm run build && electron-builder --mac --publish=never",
    "dist:win": "npm run build && electron-builder --win --publish=never",
    "dist:linux": "npm run build && electron-builder --linux --publish=never",
    "release": "npm run build && electron-builder --publish=always"
  },
  "dependencies": {
    "@roamhq/wrtc": "github:WonderInventions/node-webrtc",
    "crypto-js": "^4.2.0",
    "electron-store": "^8.2.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/ws": "^8.5.12",
    "concurrently": "^9.0.1",
    "electron": "^32.0.1",
    "electron-builder": "^25.0.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.sinckapp.desktop",
    "productName": "SinckApp",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/@roamhq/wrtc/**/*",
      "node_modules/@roamhq/wrtc-darwin-arm64/**/*",
      "node_modules/@roamhq/wrtc-darwin-x64/**/*",
      "node_modules/@roamhq/wrtc-linux-arm64/**/*",
      "node_modules/@roamhq/wrtc-linux-x64/**/*",
      "node_modules/@roamhq/wrtc-win32-x64/**/*"
    ],
    "asarUnpack": [
      "node_modules/@roamhq/wrtc/**/*",
      "node_modules/@roamhq/wrtc-darwin-arm64/**/*",
      "node_modules/@roamhq/wrtc-darwin-x64/**/*",
      "node_modules/@roamhq/wrtc-linux-arm64/**/*",
      "node_modules/@roamhq/wrtc-linux-x64/**/*",
      "node_modules/@roamhq/wrtc-win32-x64/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
